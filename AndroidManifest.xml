<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FerreteriaRF"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FerreteriaRF">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.ClientActivity"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.ProductActivity"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.OrderActivity"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.InvoiceActivity"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.AddEditClientActivity"
            android:parentActivityName=".activities.ClientActivity" />
            
        <activity
            android:name=".activities.AddEditProductActivity"
            android:parentActivityName=".activities.ProductActivity" />
            
        <activity
            android:name=".activities.AddEditOrderActivity"
            android:parentActivityName=".activities.OrderActivity" />
            
        <activity
            android:name=".activities.AddEditInvoiceActivity"
            android:parentActivityName=".activities.InvoiceActivity" />

    </application>

</manifest>